<Window x:Class="MeatProcessingBelov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeatProcessingBelov" xmlns:viewmodel="clr-namespace:MeatProcessingBelov.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="450" Width="800">
    <Grid>
        <ContentControl x:Name="MainContentControl" Content="{Binding CurrentControl}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    </Grid>
</Window>
